.container
    .row
        h2
            span(data-hook='title') ABR Group
            | &nbsp;
            small(data-hook='subtitle')
    .row
        .col-lg-8
            .row
                table.table.table-hover
                    thead
                        th Date
                        th Subject
                        th Experiments
                        th Tags
                        th Type
                        th Freq (kHz)
                        th Threshold
                    tbody(data-hook='sets-list-area')
        .col-lg-4
            .panel.panel-default
                .panel-heading
                    h4.panel-title Actions
                .panel-body
                    .btn-group.btn-group-justified
                        .btn-group
                            button.btn.btn-primary(data-hook='edit') Edit Details
                        .btn-group
                            button.btn.btn-warning(data-hook='remove') Remove
            .panel.panel-default
                .panel-heading
                    h4.panel-title ABR Group Details
                .panel-body
                    div(data-hook='details')
